set -e
. "$STREAMPIPES_WORKDIR/bin/common"

cli_help_clean() {
  cat <<EOF
Remove all created configurations/data volumes

Usage: streampipes clean
EOF

  exit 1
}

[ "$1" == '--help' ] || [ "$1" == '-h' ] && cli_help_clean

if [ "$#" -gt 1 ]; then
    fatal "Illegal number of arguments, see 'streampipes ${0##*/} --help'"
fi

if is_streampipes_running; then
  info "Running StreamPipes environment detected"
else
  if [ "$(docker volume ls --filter name=streampipes -q)" ]; then
    info "Removing StreamPipes docker volumes"
    run "docker volume rm $(docker volume ls --filter name=streampipes -q)" > /dev/null 2>&1
    info "All StreamPipes configurations/docker volumes were deleted"
  else
    info "No StreamPipes configurations/docker volumes found"
  fi
fi
