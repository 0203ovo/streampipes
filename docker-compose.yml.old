version: "2"
services:
  consul:
    image: consul
    environment:
      - "CONSUL_LOCAL_CONFIG={\"disable_update_check\": true}"
      - "CONSUL_BIND_INTERFACE=eth0"
      - "CONSUL_HTTP_ADDR=0.0.0.0"
    entrypoint:
      - consul
      - agent
      - -server
      - -bootstrap-expect=1
      - -data-dir=/consul/data
      - -node=consul-one
      - -bind={{ GetInterfaceIP "eth0" }}
      - -client=0.0.0.0
      - -enable-script-checks=true
      - -ui
    volumes:
      - ./config/consul:/consul/data
    ports:
      - "8500:8500"
      - "8600:8600"
    networks:
      spnet:
        ipv4_address: 172.31.0.9

  zookeeper:
    image: wurstmeister/zookeeper
    ports:
      - "2181:2181"
    networks:
      spnet:

  kafka:
    image: wurstmeister/kafka:1.0.0
    ports:
      - "9092:9092"
    environment:
      KAFKA_ADVERTISED_HOST_NAME: ${SP_HOST} 
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181
      KAFKA_MESSAGE_MAX_BYTES: 5000012
      KAFKA_FETCH_MESSAGE_MAX_BYTES: 5000012
      KAFKA_REPLICA_FETCH_MAX_BYTES: 10000000
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    networks:
      spnet:
   
  backend:
    image: ipe-wim-gitlab.fzi.de:5000/streampipes/ce/backend:0.55.3-SNAPSHOT
    depends_on:
      - consul
      - couchdb
    ports:
      - "8030:8030"
    volumes:
      - ./config:/root/.streampipes
      - ./config/RDF4J:/root/.RDF4J
    networks:
      spnet:

  elasticsearch:      
    image: docker.elastic.co/elasticsearch/elasticsearch-oss:6.2.3
    environment:
      - cluster.name=streampipes-cluster
      - bootstrap.memory_lock=true
      - "ES_JAVA_OPTS=-Xms512m -Xmx512m"
      - "discovery.zen.ping.unicast.hosts=elasticsearch"
    ports:
      - "9200:9200"
      - "9300:9300"
    ulimits:
      memlock:
        soft: -1
        hard: -1
    volumes:
      - esdata1:/usr/share/elasticsearch/data
    networks:
      spnet:

  kibana:
    image: docker.elastic.co/kibana/kibana-oss:6.2.3
    environment:
      SERVER_NAME: ${SP_HOST}
      ELASTICSEARCH_URL: http://elasticsearch:9200
    ports:
      - "5601:5601"
    networks:
      spnet:

  activemq:
    image: ipe-wim-gitlab.fzi.de:5000/streampipes/services/activemq
    ports:
      - "61616:61616"
      - "61614:61614"
      - "8161:8161"
    networks:
      spnet:

  couchdb:
    image: couchdb:2.1.1
    ports:
      - "5984:5984"
    volumes:
       - ./config/couchdb/data:/opt/couchdb/data
    networks:
      spnet:

  jobmanager:
    image: ipe-wim-gitlab.fzi.de:5000/streampipes/services/flink:1.4
    ports:
      - "8081:8099"
    command: jobmanager
    networks:
      spnet:

  taskmanager:
    image: ipe-wim-gitlab.fzi.de:5000/streampipes/services/flink:1.4
    command: taskmanager
    environment:
      - FLINK_NUM_SLOTS=20
    networks:
      spnet:

  nginx:
    image: ipe-wim-gitlab.fzi.de:5000/streampipes/ui/dev
    ports:
      - "80:80"
    depends_on:
      - backend
      - couchdb
      - activemq
      - consul
    networks:
      spnet:
  
  pe-examples-sources:
    image: ipe-wim-gitlab.fzi.de:5000/streampipes/pe-examples-sources:0.55.3-SNAPSHOT
    depends_on:
      - "consul"
    ports:
      - "8098:8090"
    environment:
      - SP_ICON_HOST=${SP_ICON_HOST}
    networks:
      spnet:
  
  pe-sources-samples:
    image: ipe-wim-gitlab.fzi.de:5000/streampipes/streampipes-pe/pe-sources-samples:latest
    depends_on:
      - "consul"
    ports:
      - "8089:8090"
    volumes:
      - ./config:/root/.streampipes
    environment:
      - SP_ICON_HOST=${SP_ICON_HOST}
    networks:
      spnet:

  pe-esper:
    image: ipe-wim-gitlab.fzi.de:5000/streampipes/streampipes-pe/pe-processors-esper:latest
    depends_on:
      - "consul"
    environment:
      - SP_ICON_HOST=${SP_ICON_HOST}
    ports:
      - "8090:8090"
    networks:
      spnet:

  pe-sinks:
    image: ipe-wim-gitlab.fzi.de:5000/streampipes/streampipes-pe/pe-sinks-standalone:latest
    depends_on:
      - "consul"
    environment:
      - STREAMPIPES_HOST=${SP_HOST}
      - SP_ICON_HOST=${SP_ICON_HOST}
    ports:
      - "8091:8090"
    networks:
      spnet:
 
  pe-jvm:
    image: ipe-wim-gitlab.fzi.de:5000/streampipes/streampipes-pe/pe-jvm:latest
    depends_on:
      - "consul"
    environment:
      - SP_ICON_HOST=${SP_ICON_HOST}
    ports:
      - "8002:8090"
    networks:
      spnet:
  
  pe-flink-samples:
    image: ipe-wim-gitlab.fzi.de:5000/streampipes/streampipes-pe/pe-mixed-flink:latest
    depends_on:
      - "consul"
    ports:
      - "8094:8090"
    environment:
      - SP_ICON_HOST=${SP_ICON_HOST}
    volumes:
      - ./config:/root/.streampipes
    networks:
      spnet:
 
  kafka-rest:
    image: confluentinc/cp-kafka-rest
    ports:
      - "8073:8082"
    environment:
      - ZK_CONNECTION_STRING=zookeeper:2181
      - KAFKA_REST_HOST_NAME=${SP_HOST}
      - KAFKA_REST_ZOOKEEPER_CONNECT=zookeeper:2181
    networks:
      spnet:

  pe-hmi-logistics-sources:
    image: ipe-wim-gitlab.fzi.de:5000/hmi-2018/pe-hmi-logistics-sources:latest
    depends_on:
      - "consul"
      - "kafka"
    environment:
      - SP_ICON_HOST=${SP_ICON_HOST}
    ports:
      - "8074:8090"
    networks:
      spnet:

  pe-jvm-hmi:
    image: ipe-wim-gitlab.fzi.de:5000/hmi-2018/pe-imageclassification-jvm:latest
    depends_on:
      - "consul"
      - "kafka"
    environment:
      - SP_ICON_HOST=${SP_ICON_HOST}
    ports:
      - "8077:8090"
    volumes:
      - ./data:/model-repository
    networks:
      spnet:

  swagger-ui:
    image: swaggerapi/swagger-ui
    ports:
      - "8080:8080"
    environment:
      - "API_URL=http://${SP_HOST}/streampipes-backend/api/docs/swagger.json"
    networks:
      spnet:

networks:
  spnet:
    driver: bridge
    ipam:
     config:
       - subnet: 172.31.0.0/16
         gateway: 172.31.0.1

volumes:
  esdata1:
    driver: local
