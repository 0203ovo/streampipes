<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ActivityMain"
    tools:showIn="@layout/activity_bleconnector">

    <Switch
        android:id="@+id/mqttConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MQTTVerbindung"
        style="@android:style/TextAppearance.DeviceDefault.Large"/>

    <!--TextView
        android:id="@+id/titleConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/title" /-->

    <Switch
        android:id="@+id/bleConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BLE - Verbindung"
        style="@android:style/TextAppearance.DeviceDefault.Large"/>

    <LinearLayout
        android:id="@+id/bleConnections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Activity adds BLE_CONNECTIONS -->

    </LinearLayout>

</LinearLayout>
